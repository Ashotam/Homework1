//4 Enter a number. Find the difference between its biggest and smallest digits.
function AccountNumber(number){
    let copyOfNumber = number;
    let smallest =9;
    let biggest = 0;
    if(number < 10){
        return 0
    }
    while(number >0){

        biggest =number % 10 > biggest?number % 10:biggest;
        number =(number -number%10)/10;
    }

    while(copyOfNumber > 0){

        smallest =copyOfNumber % 10 < smallest?copyOfNumber % 10:smallest;
        copyOfNumber =(copyOfNumber -copyOfNumber%10)/10;
    }

    return biggest - smallest
}


console.log( AccountNumber(101));

//5 Insert a number. Print ‘yes’ if the number is prime, ‘no’ otherwise.

function isPrime(number){
    if(number<3)return "yes";
    for(let i=2;i<number;i++){
        if(number % i ==0){
            return "no";
            break
        }
    }
    return "yes"
}
console.log(isPrime(48652348451111));
//7 Write a recursive function to determine whether all digits of the number are odd or not.
function isOdd(number){

    if(number<10){

        return number%2>0;
    }

    number =   number % 10 + isOdd((number-number % 10)/10);
    return number % 2 >0;
}
console.log(isOdd(1311111));




